<div id="main" class='col-md-12'>
  <div class='panel panel-default login'>
    <div class="panel-heading"><h1>Login</h1></div>
    <div class="panel-body">
      <form {{action 'login' on='submit'}} class='form-horizontal' role='form' autocomplete='off'>
        <div class="form-group has-feedback {{if usernameMsg 'has-error'}}">
          <label class='col-sm-2 control-label'>Username</label>
          <div class="col-sm-10">
            {{input id='username' placeholder='Username' value=username
              class='form-control' autocomplete='off'}}
            {{#if usernameMsg}}
              <span class="form-control-feedback"><i class='fa fa-times'></i></span>
              <small id='usernameMsg' class="text-danger">{{usernameMsg}}</small>
            {{/if}}
          </div>
        </div>
        <div class="form-group has-feedback {{if passwordMsg 'has-error'}}">
          <label class='col-sm-2 control-label'>Password</label>
          <div class="col-sm-10">
            {{input id='password' type='password' placeholder='Password'
              value=password class='form-control' autocomplete='off'}}
            {{#if passwordMsg}}
              <span class="form-control-feedback"><i class='fa fa-times'></i></span>
              <small id='passwordMsg' class="text-danger">{{passwordMsg}}</small>
            {{/if}}
          </div>
        </div>
        <div class="form-group has-feedback {{if accountMsg 'has-error'}}">
          <label class='col-sm-2 control-label'>Account</label>
          <div class="col-sm-10">
            {{input id='account' placeholder='Account' value=account class='form-control'
               autocomplete='off'}}
            {{#if accountMsg}}
              <span class="form-control-feedback"><i class='fa fa-times'></i></span>
              <small id='accountMsg' class="text-danger">{{accountMsg}}</small>
            {{/if}}
          </div>
        </div>

        <div class='row'>
          <div class='col-lg-12 control-label'>
            {{input id='login' type='submit' value='Login' class='btn btn-primary btn-lg pull-right'}}
            {{#link-to 'register' id='register' class='btn btn-default btn-lg pull-left'}}Register{{/link-to}}
          </div>
        </div>
        <div class='row'>
          <div class='col-lg-12'>
            <a id='forgotpassword' class='pull-right forgot-password' {{action 'forgotPassword'}}>Forgot Password</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
